<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ListEmployee">


    <TextView
        android:id="@+id/tvEmpList"
        android:layout_width="314dp"
        android:layout_height="47dp"
        android:text="List of Employees"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/btnEmpListCreateEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#388E3C"
        android:text="Create Employee"
        android:textColor="#131313"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="@+id/lvEmpList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212">

        <TextView
            android:id="@+id/tvEmpListId"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text="ID"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpListName"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Name"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpListEmail"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Email"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpListAddress"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:text="Address"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpListSalary"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="Salary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmpListDepartment"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="Dept."
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/line_hAction"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:text="Action"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvEmpList"
        android:layout_width="415dp"
        android:layout_height="603dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>