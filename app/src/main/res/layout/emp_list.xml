<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/layoutEmpListId"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text="ID"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutEmpListName"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Name"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutEmpListEmail"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Email"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutEmpListAddress"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:text="Address"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutEmpListSalary"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="Salary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/layoutEmpListDepartment"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="Dept."
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/layoutEmpListEdit"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_edit_24" />

        <ImageView
            android:id="@+id/layoutEmpListDelete"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_delete_24" />

    </LinearLayout>

</LinearLayout>